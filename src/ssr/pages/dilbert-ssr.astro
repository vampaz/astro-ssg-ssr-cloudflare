---
import Layout from '../../layouts/Layout.astro'

const response = await fetch('https://dilbert.conekto.workers.dev')
const data = await response.json()
const fu = new Date().toLocaleString()
---

<Layout title="Dilbert SSR">
	<div class="dilbertWrapper">
		<h3>{data.alt}</h3>
		<img src={data.src} alt={data.alt} />
		<a href={data.url} title={data.url} target="_blank">{data.url}</a>
		{fu}
	</div>
</Layout>

<style>
	.dilbertWrapper {
		padding: var(--spacing-s);
	}
	img {
		width: 100%;
	}

	h3 {
		padding: var(--spacing-xxs);
		margin: 0;
	}
</style>
